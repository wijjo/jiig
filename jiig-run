#!/usr/bin/env python3

"""
Front end script for Jiig-based tools.

Use as the program in the "shebang" line of the main script.
"""

import os
import sys

# Use script path to determine Jiig library folder to add to Python path.
_LIB_FOLDER = os.path.join(os.path.dirname(os.path.realpath(__file__)), 'lib')
if _LIB_FOLDER not in sys.path:
    sys.path.insert(0, _LIB_FOLDER)
# Now it is possible to import Jiig initialization.
from jiig.initialization import initialize

if __name__ == '__main__':
    initialize()
