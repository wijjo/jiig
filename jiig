#!/usr/bin/env python3

"""Main Jiig program."""

import os
import sys

# Hard-code to load `initialize` and dependency modules from the source tree.
LIB_FOLDER = os.path.join(os.path.dirname(os.path.realpath(__file__)), 'lib')
if os.path.isdir(LIB_FOLDER):
    sys.path.insert(0, LIB_FOLDER)


if __name__ == '__main__':
    try:
        from jiig.initialize import initialize_jiig
        initialize_jiig()
    except KeyboardInterrupt:
        print('')
